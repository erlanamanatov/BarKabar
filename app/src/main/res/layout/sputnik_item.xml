<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/sputnikItemColor"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <ImageView
          android:id="@+id/sp_item_image"
          android:layout_width="@dimen/image_width"
          android:layout_height="@dimen/image_height"
          android:layout_margin="4dp"
          app:srcCompat="@drawable/ic_image_holder"/>

      <TextView
          android:id="@+id/sp_item_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_margin="4dp"
          android:textColor="@color/mainAttributes"
          android:textStyle="bold"
          tools:text="title"/>
    </LinearLayout>


    <TextView
        android:id="@+id/sp_item_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:text="description"/>

    <TextView
        android:id="@+id/sp_item_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/dateAndCategory"
        app:layout_constraintStart_toStartOf="@+id/sp_item_date"
        app:layout_constraintTop_toBottomOf="@+id/sp_item_date"
        tools:text="category"/>

    <TextView
        android:id="@+id/sp_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/dateAndCategory"
        app:layout_constraintStart_toStartOf="@+id/sp_item_description"
        app:layout_constraintTop_toBottomOf="@+id/sp_item_description"
        tools:text="date"/>


  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
