<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
      android:id="@+id/textView2"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="20dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="20dp"
      android:text="@string/official_exchange_rates"
      android:textColor="@color/mainAttributes"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="40dp"
      android:layout_height="20dp"
      android:layout_marginStart="40dp"
      android:layout_marginTop="40dp"
      android:scaleType="centerInside"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      app:srcCompat="@drawable/usd"/>

  <TextView
      android:id="@+id/textView3"
      style="@style/CurrencyTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:text="@string/usd"
      app:layout_constraintBottom_toBottomOf="@+id/imageView2"
      app:layout_constraintStart_toEndOf="@+id/imageView2"/>

  <TextView
      android:id="@+id/exch_usd_value"
      style="@style/CurrencyTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      app:layout_constraintBottom_toBottomOf="@+id/textView3"
      app:layout_constraintStart_toEndOf="@+id/textView3"/>

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="40dp"
      android:layout_height="20dp"
      android:layout_marginTop="20dp"
      android:scaleType="centerInside"
      app:layout_constraintStart_toStartOf="@+id/imageView2"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      app:srcCompat="@drawable/eur"/>

  <TextView
      android:id="@+id/textView7"
      style="@style/CurrencyTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:text="@string/eur"
      app:layout_constraintBottom_toBottomOf="@+id/imageView5"
      app:layout_constraintStart_toEndOf="@+id/imageView5"/>

  <TextView
      android:id="@+id/exch_eur_value"
      style="@style/CurrencyTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      app:layout_constraintBottom_toBottomOf="@+id/textView7"
      app:layout_constraintStart_toEndOf="@+id/textView7"/>

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="40dp"
      android:layout_height="20dp"
      android:layout_marginTop="20dp"
      android:scaleType="centerInside"
      app:layout_constraintStart_toStartOf="@+id/imageView5"
      app:layout_constraintTop_toBottomOf="@+id/imageView5"
      app:srcCompat="@drawable/kzt"/>

  <TextView
      android:id="@+id/textView9"
      style="@style/CurrencyTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:text="@string/kzt"
      app:layout_constraintBottom_toBottomOf="@+id/imageView6"
      app:layout_constraintStart_toEndOf="@+id/imageView6"/>

  <TextView
      android:id="@+id/exch_kzt_value"
      style="@style/CurrencyTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      app:layout_constraintBottom_toBottomOf="@+id/textView9"
      app:layout_constraintStart_toEndOf="@+id/textView9"/>

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="40dp"
      android:layout_height="20dp"
      android:layout_marginTop="20dp"
      android:scaleType="centerInside"
      app:layout_constraintStart_toStartOf="@+id/imageView6"
      app:layout_constraintTop_toBottomOf="@+id/imageView6"
      app:srcCompat="@drawable/rub"/>

  <TextView
      android:id="@+id/textView11"
      style="@style/CurrencyTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:text="@string/rub"
      app:layout_constraintBottom_toBottomOf="@+id/imageView7"
      app:layout_constraintStart_toEndOf="@+id/imageView7"/>

  <TextView
      android:id="@+id/exch_rub_value"
      style="@style/CurrencyTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="40dp"
      app:layout_constraintBottom_toBottomOf="@+id/textView11"
      app:layout_constraintStart_toEndOf="@+id/textView11"/>

  <ProgressBar
      android:id="@+id/exch_progress_bar"
      style="?android:attr/progressBarStyleLarge"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="20dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView7"/>


</android.support.constraint.ConstraintLayout>